<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_item_height"
    android:paddingLeft="@dimen/space_horizontal"
    android:paddingRight="@dimen/space_horizontal"
    android:background="?android:attr/selectableItemBackground">

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#dfdfdf"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_date_sale"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:text="2015/08/02"
        android:layout_weight="4"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/subheader_fontsize"/>

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:text="Soy paquito aksljdfjasdkfjaslkdj"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_weight="7"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/subheader_fontsize"
        android:paddingLeft="@dimen/space_horizontal"
        />

    <TextView
        android:id="@+id/text_view_total"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:text="$ 20 "
        android:layout_weight="4"
        android:gravity="center|left"
        android:textSize="@dimen/subheader_fontsize"
        android:paddingLeft="@dimen/space_horizontal"
        />
    </LinearLayout>
</LinearLayout>