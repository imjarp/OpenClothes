<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_product_card"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/line_item_height"
    android:layout_gravity="center_vertical"
    android:paddingLeft="@dimen/space_horizontal"
    android:paddingRight="@dimen/space_horizontal"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        
        android:layout_marginRight="@dimen/space_horizontal"
        android:layout_width="match_parent"
        android:background="#dfdfdf"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/image_view_product"
            android:scaleType="centerCrop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:src="@drawable/cb_002"
            android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_item_height"
        android:gravity="center|left"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/space_horizontal">

        <TextView
            android:id="@+id/text_view_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Model : CB-011"
            android:textColor="@color/primary"
            style="@style/TextAppearance.AppCompat.Body2"
            android:gravity="left"/>

        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            tools:text="Price: $500"
            android:gravity="left"
            android:layout_below="@+id/text_view_model"
            style="@style/TextAppearance.AppCompat.Body1"/>


        </RelativeLayout>
    </LinearLayout>



</LinearLayout>

