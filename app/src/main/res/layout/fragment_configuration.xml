<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.mx.kanjo.openclothes.ui.ConfigurationActivity$PlaceholderFragment"
    >





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_size"/>

                    <Button
                        android:id="@+id/btn_size"
                        android:text="@string/title_size"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/secondary_text"
                        android:gravity="left|center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_right"/>

                    <Button
                        android:id="@+id/btn_income_type"
                        android:text="@string/title_income"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/secondary_text"

                        android:gravity="left|center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_left"/>

                    <Button
                        android:id="@+id/btn_outcome_type"
                        android:text="@string/title_outcome"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/secondary_text"
                        android:gravity="left|center"
                        />
                </LinearLayout>
                <!--/android.support.v7.widget.CardView-->
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="6dp">


        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">

            <FrameLayout
                android:id="@+id/fragment_detail_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </FrameLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
