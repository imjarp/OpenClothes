<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="36dp"
    android:layout_marginLeft="@dimen/space_horizontal"
    tools:context="com.mx.kanjo.openclothes.ui.fragments.ShowSaleFragment">


    <LinearLayout
        android:id="@+id/linear_general_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="36dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_sale_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end|right"
            tools:text="2015/07/24"
            android:layout_marginRight="@dimen/text.field.single.line.padding.top"
            android:layout_marginBottom="@dimen/text.field.single.line.padding.top"
            />
        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:hint ="Customer name"
            />

        <TextView
            android:id="@+id/text_total_sale"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Total"
            android:gravity="right|end|center_vertical"
            android:paddingRight="24dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_header_table_sale"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_general_data"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Product"
            android:layout_weight="10"
            android:gravity="left"
            android:paddingLeft="6dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_weight="4"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_weight="4"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_weight="4"
            android:gravity="center"/>

    </LinearLayout>


