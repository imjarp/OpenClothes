<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_item_height"
    android:paddingLeft="@dimen/space_horizontal"
    android:paddingRight="@dimen/space_horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12">

        <ImageView
            android:id="@+id/image_view_product"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/cb_002"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_view_model"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            tools:text="supperlofasddsjkldsfkjldsfkljdsfkjldskljdsfsjklsd"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_toRightOf="@+id/image_view_product"
            android:layout_alignTop="@+id/image_view_product"
            style="@style/TextAppearance.AppCompat.Body2"
            android:paddingLeft="@dimen/space_horizontal"/>
        <TextView
            android:id="@+id/text_view_size"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            tools:text="Small"
            android:layout_toRightOf="@+id/image_view_product"
            android:layout_below="@+id/text_view_model"
            android:gravity="center_vertical|top"
            style="@style/TextAppearance.AppCompat.Body1"
            android:paddingLeft="@dimen/space_horizontal"/>

        </RelativeLayout>



    <TextView
        android:id="@+id/text_view_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:text="12"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="@color/primary"/>

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:text="$12.00"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="@color/primary"/>

    <TextView
        android:id="@+id/text_view_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:text="$24.00"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="@color/primary_dark"
        android:textStyle="bold"/>



</LinearLayout>